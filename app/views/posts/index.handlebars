<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Tüm Kayıtlar
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <a href="#" class="btn btn-brand btn-elevate btn-icon-sm" data-toggle="modal" id="addPost"
                            data-target="#kt_modal_4">
                            <i class="la la-plus"></i>
                            Blog Yazısı Ekle
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__body">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable" id="postsTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Fotoğraf</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                        <th>Yorum İzni</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each postData}}
                    <tr>
                        <td>{{pid}}</td>
                        <td><img src='./uploads/{{p04}}' width="30" height="30" /></td>
                        <td>{{p00}}</td>
                        <td>{{c00}}</td>
                        <td>{{p01}}</td>
                        <td>{{p02}}</td>
                        <td>{{generateTime p05 'Do MMMM YYYY'}}</td>
                        <td>{{pid}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>